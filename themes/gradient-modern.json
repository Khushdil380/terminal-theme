{
  "name": "Gradient Modern",
  "description": "Modern gradient theme with smooth color transitions",
  "version": "1.0.0",
  "prompt_symbol": "symbol:chevron",
  "prompt_symbol_color": "magenta",
  "blocks": [
    {
      "type": "username",
      "enabled": true,
      "foreground": "blue",
      "background": "",
      "icon": "[USER]",
      "separator": "|",
      "separator_color": "blue",
      "template": "{{username}}"
    },
    {
      "type": "hostname",
      "enabled": true,
      "foreground": "darkblue",
      "background": "",
      "icon": "[PC]",
      "separator": "|",
      "separator_color": "darkblue",
      "template": "{{hostname}}"
    },
    {
      "type": "directory",
      "enabled": true,
      "foreground": "magenta",
      "background": "",
      "icon": "[DIR]",
      "separator": "|",
      "separator_color": "magenta",
      "max_length": 45,
      "template": "{{path}}"
    },
    {
      "type": "git-branch",
      "enabled": true,
      "foreground": "darkmagenta",
      "background": "",
      "icon": "[GIT]",
      "separator": "",
      "separator_color": "darkmagenta",
      "show_status": true,
      "staged_icon": "+",
      "changes_icon": "!",
      "untracked_icon": "?",
      "template": "{{branch}} {{status}}"
    },
    {
      "type": "time",
      "enabled": false,
      "foreground": "#ffffff",
      "background": "#ddd6fe",
      "icon": "nerd:clock",
      "separator": "powerline:right-arrow",
      "separator_color": "#ddd6fe",
      "format": "HH:mm",
      "template": "{{time}}"
    }
  ]
}